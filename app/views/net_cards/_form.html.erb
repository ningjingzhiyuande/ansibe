<%= simple_form_for(@net_card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :applicant_id, value: current_user.id %>
    <%= f.input :reviewer1_username, label: "一级审阅人的RTX Username" %>
    <%#= f.input :reviewer2_username %>
    <%#= f.input :workflow_state %>
    <%= f.input :request_excuse, label: "使用理由" %>    
    <%= f.input :start_at, label: "开始借用时间" %>
    <%= f.input :end_at, label: "归还时间"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
